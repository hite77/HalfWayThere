<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".MainActivity">

<TextView android:text="@string/steps" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/steps_title" />
<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@+id/steps_title"
    android:id="@+id/step_value"/>
<hiteware.com.halfwaythere.CircularProgressBar
    android:layout_width="300dp"
    android:layout_height="300dp"
    app:progress = "35"
    app:progressBarThickness="4dp"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/circle_status"/>

<TextView
    android:text="@string/goal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/goalstepText"
    android:layout_below="@+id/step_value"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/goalStepValue"
    android:layout_below="@+id/goalstepText"
    android:layout_alignParentLeft="true" />

    <TextView
        android:text="Service count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Good"
        android:layout_below="@+id/goalStepValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/GoodText"
        android:layout_below="@+id/Good"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/SoftwareStepsView"
        android:layout_below="@+id/GoodText"
        android:layout_alignParentLeft="true" />


</RelativeLayout>
